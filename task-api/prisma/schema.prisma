// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  name     String
  hash     String
  Tasks    Task[]
}

model Task {
  id         Int        @id @default(autoincrement())
  title      String
  author     User       @relation(fields: [authorId], references: [id])
  authorId   Int
  priority   Priority
  status     Status
  categories Category[]
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  color String
  Tasks Task[]
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum Status {
  TODO
  DOING
  DONE
}
